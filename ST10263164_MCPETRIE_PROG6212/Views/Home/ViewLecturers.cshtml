@{
    ViewData["Title"] = "View Lecturers";
}
<head>
    <style>
        .outer-container {
            background-color: #007bff;
            max-width: 90%;
            margin: 20px auto;
            padding: 20px;
            border-radius: 8px;
        }

        .inner-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
        }

        h2 {
            text-align: center;
        }

        h3 {
            text-align: center;
        }

        table { /*table size and structure*/
            width: 100%; /*makes table the size of inner(parent) container*/
            border-collapse: collapse; /*makes neighbouring blocks share borders*/
        }

        th, td { /*table header and table data structure*/
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th { /*tabel header colour*/
            background-color: #f2f2f2;
        }

    </style>
</head>
<body>
    <div class="outer-container">
        <div class="inner-container" style="margin-bottom: 20px;">
            <h2>All Lecturers</h2>
        </div>

        <div class="inner-container" style="margin-bottom: 20px;">
            <table>
                <thead>
                    <tr>
                        <th>Lecturer ID</th>
                        <th>Lecturer Name</th>
                        <th>Lecturer Surname</th>
                        <th>Lecturer Email</th>
                        <th>Lecturer Contact Number</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.Lecturer != null)
                    {
                        foreach (var lecturer in Model.Lecturer)
                        {
                            <tr>
                                <td>@lecturer.LecturerId</td>
                                <td>@lecturer.LecturerName</td>
                                <td>@lecturer.LecturerSurname</td>
                                <td>@lecturer.LecturerEmail</td>
                                <td>@lecturer.LecturerContactNumber</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>