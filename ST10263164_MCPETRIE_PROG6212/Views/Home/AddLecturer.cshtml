@model Lecturer

@{
    ViewData["Title"] = "Add Lecturer";
}
<head>
    <style>
        .outer-container {
            background-color: #007bff;
            max-width: 90%;
            margin: 20px auto;
            padding: 20px;
            border-radius: 8px;
        }

        .inner-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .inner-container p {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 10px;
            }

            .inner-container .form-group {
                margin-bottom: 20px;
            }

            .inner-container input {
                text-align: left;
                width: 100%;
                width: 600px;
                margin-bottom: 20px;
            }

        h2 {
            text-align: center;
        }

        h3 {
            text-align: center;
        }

        p {
            text-align: left;
        }

        .btn-submit {
            background-color: green;
            color: white;
            border: none;
            padding: 20px 20px;
            cursor: pointer;
            font-size: 24px;
        }
    </style>
</head>
<form asp-action="AddLecturer" method="post" enctype="multipart/form-data">
    <div class="form-group outer-container">
        <div class="form-group inner-container" style="margin-bottom: 20px; justify-content: center;">
            <h1>Add a Lecturer below:</h1>
        </div>
        <div class="form-group inner-container" style="margin-bottom: 20px; justify-content: center;">
            <div class="form-group">
                <label asp-for="LecturerName" class="control-label">Lecturer name</label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LecturerSurname" class="control-label">Lecturer surname</label>
                <input asp-for="LecturerSurname" class="form-control" />
                <span asp-validation-for="LecturerSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LecturerEmail" class="control-label">Lecturer email</label>
                <input asp-for="LecturerEmail" class="form-control" />
                <span asp-validation-for="LecturerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LecturerContactNumber" class="control-label">Lecturer contact number</label>
                <input asp-for="LecturerContactNumber" class="form-control" />
                <span asp-validation-for="LecturerContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LecturerPassword" class="control-label">Lecturer password</label>
                <input asp-for="LecturerPassword" class="form-control" />
                <span asp-validation-for="LecturerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Lecturer" class="btn btn-primary" style="width: 200px; text-align: center;" />
            </div>
        </div>
    </div>
</form>
